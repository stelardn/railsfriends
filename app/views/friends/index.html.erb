<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
	<h1>Friend List</h1>

	<table class="table table-stripped table-bordered table-hover">
		<thead class="thead-dark">
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Phone</th>
				<th>Twitter</th>
				<th>User ID</th>
				<th colspan="2"></th>
			</tr>
		</thead>

		<tbody class="table-hover">
	  		<% @friends.each do |friend| %>
		  		<tr>
		  			<% if friend.user == current_user %>
			  			<td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
			  			<td><%= friend.email %></td>
			  			<td><%= friend.phone %></td>
			  			<td><%= friend.twitter %></td>
			  			<td><%= friend.user_id %></td>

			    		<td><%= link_to "Edit", edit_friend_path(friend), class:"btn btn-secondary btn-sm" %></td>
			    		<td><%= link_to "Delete", friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
			    	<% end %>
			    </tr>
	  		<% end %>
		</tbody>
	</table>

	<br>

	<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

<% else %>

	<h1>Hello World!</h1>
	<p>This is my first Rails Webpage<p>
<% end %>

